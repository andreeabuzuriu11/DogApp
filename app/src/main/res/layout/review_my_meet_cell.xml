<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="meeting"
            type="com.buzuriu.dogapp.models.MyCustomMeetingObj" />
        <variable
            name="viewModel"
            type="com.buzuriu.dogapp.views.main.ui.notifications.HistoryViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/review_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/meeting_cell"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/cell_image_width"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/dog_image"
                            android:layout_marginRight="10dp"
                            android:layout_height="@dimen/cell_image_height"
                            cb_dogImg="@{meeting.dog}">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='@{"How was your meeting ?"}'
                            android:textSize="@dimen/normal_size"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <Button
                        android:id="@+id/review_participants_button"
                        android:layout_marginTop="10dp"
                        android:layout_width="190dp"
                        android:layout_height="55dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/rounded_button"
                        android:text="@string/review_participants"
                        />
                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
