<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="friendshipState"
            type="com.buzuriu.dogapp.enums.FriendshipStateEnum" />

        <variable
            name="user"
            type="com.buzuriu.dogapp.models.UserObj" />

        <variable
            name="request"
            type="com.buzuriu.dogapp.models.RequestObj" />

        <variable
            name="viewModel"
            type="com.buzuriu.dogapp.views.main.ui.friends.FriendsViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/user_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/cell_image_width"
                    android:layout_height="@dimen/cell_image_height"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    userImageBinding="@{user}"

                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="@{user.name}"
                    android:textColor="@color/text_grey"
                    android:textSize="24dp"
                    tool:text="Andy" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:padding="8dp">

                <Button
                    android:id="@+id/send_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:width="100dp"
                    android:textSize="12dp"
                    friendshipButtonBinding="@{friendshipState}"
                    enabledBasedOnFriendshipButtonBinding="@{friendshipState}"
                    android:text="Send" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
</layout>
