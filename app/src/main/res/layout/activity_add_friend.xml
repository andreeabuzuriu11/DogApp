<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="dog"
            type="com.buzuriu.dogapp.models.DogObj" />

        <variable
            name="viewModel"
            type="com.buzuriu.dogapp.viewModels.AddFriendViewModel" />
    </data>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:autofillHints="@string/search_for_user"
                android:switchTextAppearance="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/users_found_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />


        </LinearLayout>

    </RelativeLayout>

</layout>