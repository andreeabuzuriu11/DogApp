<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="meetingState"
            type="com.buzuriu.dogapp.enums.MeetingStateEnum" />
        <variable
            name="meeting"
            type="com.buzuriu.dogapp.models.MyCustomMeetingObj" />
        <variable
            name="viewModel"
            type="com.buzuriu.dogapp.views.main.ui.map.MapViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/dog_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/attended_meeting_cell"
            backgroundBinding="@{meetingState}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/joined_meeting_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        dogImageBinding="@{meeting.dog}"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dog_image">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text='@{ "Joining " + meeting.user.name + " and " + meeting.dog.name + " for a walk!"}'
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/normal_size"
                        meetingDateBinding= "@{meeting.meetingObj.date}"
                        />
                    <View
                        android:id="@+id/innerLine"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="@dimen/normal_size"
                        android:layout_height="wrap_content"
                        meetingTimeBinding= "@{meeting.meetingObj.date}"/>

                </LinearLayout>

                <Button
                    android:id="@+id/join_button"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:background="@drawable/rounded_button"
                    android:text="leave"
                    />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</layout>
