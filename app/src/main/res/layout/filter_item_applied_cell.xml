<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.buzuriu.dogapp.viewModels.FilterMeetingsViewModel" />

        <variable
            name="filterItem"
            type="com.buzuriu.dogapp.models.IFilterObj" />

    </data>


    <RelativeLayout
        android:id="@+id/filter_type_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_cell"
        android:backgroundTint="@color/dark_green"
        android:padding="5dp"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{filterItem.name}"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:autoSizeStepGranularity="@dimen/browser_actions_context_menu_min_padding"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                tools:text="Today" />

            <TextView
                android:id="@+id/discard_filter"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

</layout>