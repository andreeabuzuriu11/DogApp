<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="meeting"
            type="com.buzuriu.dogapp.models.MyCustomMeetingObj" />
        <variable
            name="viewModel"
            type="com.buzuriu.dogapp.views.main.ui.map.MapViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/dog_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:padding="10dp"
            android:background="@drawable/rounded_cell"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/meeting_cell"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/dogRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:isIndicator="false"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/dog_image"
                        android:layout_marginRight="10dp"
                        android:layout_height="90dp"
                        cb_dogImg="@{meeting.dog}">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{ "Join " + meeting.user.name + " and " + meeting.dog.name + " for a walk!"}'
                    android:textSize="20sp"
                        android:layout_gravity="center"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="26dp"
                        android:text="Monday, 23 July 2022"
                        />
                    <View
                        android:id="@+id/innerLine"
                        android:layout_width="1dp"
                        android:layout_height="100dp"
                        android:background="@color/black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="26sp"

                        android:layout_height="wrap_content"
                        android:text="10 AM"/>

                </LinearLayout>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:background="@drawable/rounded_button"
                    android:text="@string/join"/>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</layout>
