<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.buzuriu.dogapp.models.UserObj" />

    </data>

    <LinearLayout
        android:id="@+id/friend_request_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_cell">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    imageBinding="@{user.imageUrl}"
                    android:layout_width="@dimen/cell_image_width"
                    android:layout_height="@dimen/cell_image_height"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_user_account"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/dog_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="@{user.name}"
                    android:textColor="@color/text_grey"
                    android:textSize="24dp"
                    tool:text="Andrew" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:padding="8dp">

                <Button
                    android:id="@+id/accept_request"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green_accept" />

                <Button
                    android:id="@+id/decline_request"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/decline"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red_decline" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</layout>
