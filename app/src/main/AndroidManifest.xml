<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.buzuriu.dogapp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DogApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".views.AddMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".views.DogDetailActivity"
            android:exported="false" />
        <activity
            android:name=".views.main.ui.OverlayActivity"
            android:theme="@style/Theme.TransparentFullScreen" />
        <activity
            android:name=".views.AddDogActivity"
            android:exported="false" />
        <activity
            android:name=".views.main.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main8" />
        <activity
            android:name=".views.auth.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>